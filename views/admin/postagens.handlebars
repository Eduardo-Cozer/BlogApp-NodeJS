<h2>Lista de postagens:</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button></a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Data: {{data}}</small>
            <br>
            <small>Categoria: {{categoria.nome}}</small>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-primary btn-sm">Editar</button></a>
                <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger btn-sm">Deletar</button></a>
            </div>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma postagem registrada</h4>
{{/each}}